<emulation>
  <emulationName>Demo-Emu</emulationName>
  <emulationType>Mix</emulationType>
  <resourceType>Mix</resourceType>
  <!-- as startTime use the format '2012-11-26T17:28:00' or the keyword 'now' (no '' characters needed) -->
  <startTime>now</startTime>
  <!--duration in seconds -->
  <stopTime>540</stopTime>

  <distributions>
     <name>MEM-increase</name>
     <startTime>60</startTime>
     <!--duration in seconds -->
     <duration>60</duration>
     <granularity>18</granularity>
     <distribution href="/distributions/linear" name="linear" />
     <!--Megabytes for memory -->
      <startLoad>1000</startLoad>
      <stopLoad>18000</stopLoad>
      <emulator href="/emulators/stressapptest" name="stressapptest" />
      <emulator-params>
        <resourceType>MEM</resourceType>
	<!--time between iterations in usec (default 1000)-->
	<memThreads>0</memThreads>
      </emulator-params>
  </distributions>
  <distributions>
     <name>MEM-decrease</name>
     <startTime>120</startTime>
     <!--duration in seconds -->
     <duration>60</duration>
     <granularity>18</granularity>
     <distribution href="/distributions/linear" name="linear" />
     <!--Megabytes for memory -->
      <startLoad>18000</startLoad>
      <stopLoad>1000</stopLoad>
      <emulator href="/emulators/stressapptest" name="stressapptest" />
      <emulator-params>
        <resourceType>MEM</resourceType>
        <!--time between iterations in usec (default 1000)-->
        <memThreads>0</memThreads>
      </emulator-params>
  </distributions>
  <distributions>
     <name>IO</name>
     <startTime>240</startTime>
     <!--duration in seconds -->
     <duration>120</duration>
     <granularity>1</granularity>
     <distribution href="/distributions/linear" name="linear" />
     <!--Megabytes for memory -->
      <startLoad>250</startLoad>
      <stopLoad>250</stopLoad>
      <emulator href="/emulators/stressapptest" name="stressapptest" />
      <emulator-params>
        <resourceType>IO</resourceType>
	<!--Number of threads (default cpu number)-->
	<fileQty>7</fileQty>
      </emulator-params>
  </distributions>
  <distributions>
     <name>IO-MEM</name>
     <startTime>420</startTime>
     <!--duration in seconds -->
     <duration>118</duration>
     <granularity>1</granularity>
     <distribution href="/distributions/linear" name="linear" />
     <!--Megabytes for memory -->
      <startLoad>10000</startLoad>
      <stopLoad>10000</stopLoad>
      <emulator href="/emulators/stressapptest" name="stressapptest" />
      <emulator-params>
        <resourceType>IO</resourceType>
	<!--Number of threads (default cpu number)-->
	<fileQty>7</fileQty>
      </emulator-params>
  </distributions>

  <log>
  	<!-- Use value "1" to enable logging(by default logging is off)  -->
  	<enable>1</enable>
  	<!-- Use seconds for setting probe intervals(if logging is enabled default is 3sec)  -->
  	<frequency>3</frequency>
  </log>

</emulation>
